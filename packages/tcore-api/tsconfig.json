{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "allowJs": true,
    "sourceMap": false,
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "exclude": [
    "node_module",
    "jest.config.js",
    ".eslintrc.js"
  ],
  "include": ["src/**/*", "./vitest.config.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
