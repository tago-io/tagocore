{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build-tsc",
    "rootDir": "./src",
    "baseUrl": ".",
    "jsx": "react",
    "noImplicitAny": true,
    "declaration": true,
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext"
  },
  "include": [
    "types/styled.d.ts",
    "types/index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/__mocks__/*",
    "node_modules"
  ]
}
